html,body {
  font-family: 'Open Sans', sans-serif;
  margin: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

div {
 border: 1px solid black;
}

label{
	cursor: pointer;
}


h5,h6 {
  padding: 0;
  margin: 0;
}


h4 {
  color: white;
}

h3 {
 color: red;
 font-weight: normal;


}



#title {
  width: 100%;
  text-align: center;

}

#mycontainer {
  display: flex;
  width: 100%;
  height: 100%;
  overflow:auto;
  border-collapse: collapse;
}

#mycontainer div {
  float: left;
}

#left_column {
  background: rgb(7, 63, 148);
  flex: 0 0 190px;
  height: 100%;
 overflow-y: scroll;
}

#left_column div {
  float: none;
}

#right_column {
  overflow-y: scroll;
  scroll-behavior: smooth;
  flex: 0.95;
  margin-left: 10%;
  height: 100%;
}

#machines_div {
  height: 90%;
  width: 100%;
}

#machines_div div {
  
}

#add_div div {
  float: none;
}

#logOutSpace {
 height: 100%;
}

.delete_div {
 width: 100%;
}



.margin_machines {
